div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Project:</h3>

    <form class="form new-movie-form">
      <div class="form-group">
        <label for="movie-name">:</label>
        <input class="form-input" type="text" id="movie-search" name="movie-name" />
      </div>
      

  {{#if movies.length}}
  <div class="col-md-6 project-list">

    {{#each movies as |movie|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{movie.title}} {{movie.avgRating}} {{movie.avgRating}}</h4>
      </div>
      
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

