<h1 class="flex flexwrap justify-center text-4xl font-pacifico">
  Welcome to Cinemagic!
</h1>
<container class="mt-6 flex flex-wrap justify-center space-x-8">
  <div class="">
    <form class="bg-white shadow-lg px-6 pt-4 pb-6 mb-2 rounded loginForm">
      <div class="form-group">
        <label class="text-slate-800 font-bold" for="username_login">Username:</label>
        <input class="shadow border rounded w-full text-slate-500 leading-tight py-2" type="text" id="username_login" />
      </div>
      <div class="form-group">
        <label class="text-slate-800 font-bold" for="password_login">Password:</label>
        <input class="shadow border rounded w-full text-slate-500 leading-tight py-2" type="password"
          id="password_login" />
      </div>
      <div class="form-group">
        <button
          class="mt-2 inline-block px-5 py-3 rounded-lg shadow-lg bg-blue-400 text-white tracking-wider font-semibold"
          type="submit">Login!</button>
      </div>
    </form>
  </div>

  <div class="">
    <img src="/images/cinemagic-unbutu.png" alt="cine-logo">
  </div>

  <div class="">
    <form class="bg-white shadow-lg px-6 pt-4 pb-6 mb-2 rounded signupForm">
      <div class="form-group">
        <label class="text-slate-800 font-bold" for="username-signup">Username:</label>
        <input class="shadow border rounded w-full text-slate-500 leading-tight py-2 form-input" type="text"
          id="username_signup" />
      </div>
      <div class="form-group">
        <label class="text-slate-800 font-bold" for="email">Email:</label>
        <input class="shadow border rounded w-full text-slate-500 leading-tight py-2 form-input" type="text"
          id="email" />
      </div>
      <div class="form-group">
        <label class="text-slate-800 font-bold" for="password-signup">Password:</label>
        <input class="shadow border rounded w-full text-slate-500 leading-tight py-2 form-input" type="password"
          id="password_signup" />
      </div>
      <div class="form-group">
        <button
          class="mt-2 inline-block px-5 py-3 rounded-lg shadow-lg bg-blue-400 text-white tracking-wider font-semibold btn btn-primary"
          type="submit">Sign-Up!</button>
      </div>
    </form>
  </div>
</container>
<div class="flex justify-center py-3 text-lg font-pacifico">
  <p>Supported by:</p>
</div>
<div class="mt-10 flex justify-center">
  <p>
    <a href="https://www.themoviedb.org/documentation/api">
      <img class="object-scale-down h-24 mb-6" src="/images/movie_db.svg" alt="movie-db-pic">
    </a>
  </p>
</div>

<script src="./js/login.js"></script>